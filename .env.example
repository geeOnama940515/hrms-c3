# Application Branding
NEXT_PUBLIC_APP_BRAND_PREFIX=VMIS

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Docker Configuration (for docker-compose)
CONTAINER_NAME=vmis-hrms
DOMAIN=localhost
PORT=3000

# Database (when implementing real backend)
# DATABASE_URL=postgresql://user:password@localhost:5432/hrms_db

# Authentication (when implementing real auth)
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Storage (for document uploads)
# STORAGE_TYPE=local
# UPLOAD_PATH=./uploads
# MAX_FILE_SIZE=10MB

# Redis (for caching and sessions)
# REDIS_URL=redis://localhost:6379

# Monitoring
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info